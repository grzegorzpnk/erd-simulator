{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "name": {
          "description": "Name of the SmartPlacementIntent",
          "type": "string",
          "maxLength": 128,
          "pattern": "^([A-Za-z0-9][-A-Za-z0-9_.]*)?[A-Za-z0-9]$"
        },
        "description": {
          "description": "Description for the SmartPlacementIntent",
          "type": "string",
          "maxLength": 1024
        },
        "userData1": {
          "description": "User relevant data for the SmartPlacementIntent",
          "type": "string",
          "maxLength": 512
        },
        "userData2": {
          "description": "User relevant data for the SmartPlacementIntent",
          "type": "string",
          "maxLength": 512
        }
      },
      "required": [
        "name"
      ]
    },
    "spec": {
      "type": "object",
      "required": [
        "app",
        "smartPlacementIntentData"
      ],
      "properties": {
        "app": {
          "type": "string",
          "maxLength": 63,
          "pattern": "^[a-z0-9-]+$"
        },
        "smartPlacementIntentIntentData": {
          "type": "string",
          "maxLength": 1024
        }
      }
    }
  }
}
